        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/network_imageViewv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:focusedByDefault="true"
                    android:nextFocusDown="@id/donebtn"
                    android:background="@drawable/admin_btn_selector"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/txtAddOrInstalled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:background="@drawable/bg_uninstalled_app"
                    android:text="Add"
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/txtAppSize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:textColor="@color/md_grey_500"
                    android:textSize="12sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="0.05" />

                    <TextView
                        android:id="@+id/gameCategoryName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.95"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/btnViewAll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="VIEW ALL"
                        android:textAllCaps="true"
                        android:textColor="#0293e1"
                        android:textSize="12sp"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/left_slide"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/prev" />

                    <LinearLayout
                        android:id="@+id/recycler_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9">

                        <HorizontalScrollView
                            android:id="@+id/recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:scrollbars="none">

                            <LinearLayout
                                android:id="@+id/dynamic_image_layout1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/right_slide"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.05"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:src="@drawable/next" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

