<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:background="@color/leftmenu_list">

    <ScrollView
        android:id="@+id/ui_right_menu_rl_options_scroll"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/ui_right_menu_rl_options"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ui_right_menu_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Profile"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent" />

            <TextView
                android:id="@+id/ui_right_menu_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Settings"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent" />

            <TextView
                android:id="@+id/ui_right_menu_favorites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Favorites"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent" />

            <TextView
                android:id="@+id/ui_right_menu_subscriptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Subscription Manager"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ui_right_menu_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Support"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ui_right_menu_privacypolicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Privacy Policy"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large"
                android:visibility="visible" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ui_right_menu_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/padding_large_half"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="@dimen/padding_large"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding_large"
                android:text="Log out"
                android:textColor="@color/white_transparent_little"
                android:textSize="@dimen/font_large"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_transparent"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

