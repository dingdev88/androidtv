<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000"
    tools:context="com.selecttvapp.ui.fragments.SearchFragment">

    <RelativeLayout
        android:id="@+id/homeactivity_searchbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/searchLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Search"
            android:textColor="@color/white"
            android:textSize="40sp" />



        <EditText
            android:id="@+id/editSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/searchLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="42dp"
            android:background="@drawable/textbox"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:nextFocusDown="@id/btn_search"
            android:hint="@string/homeactivity_search_hint"
            android:imeOptions="actionSearch"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_below="@id/editSearch"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/ui_channel_line_height_20"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="18sp"
            android:focusableInTouchMode="true"
            android:textAllCaps="false"
            android:nextFocusUp="@id/editSearch"
            android:background="@drawable/admin_btn_selector_solid"/>

    </RelativeLayout>

