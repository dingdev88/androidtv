<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upgrade Anytime"
        android:id="@+id/textView5"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_very_extra_large"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to SelectTV"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/font_very_extra_large"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join Millions and Watch over"
        android:id="@+id/textView7"
        android:textSize="@dimen/font_very_large"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500,000 TV Shows, Movies and"
        android:id="@+id/textView9"
        android:textSize="@dimen/font_very_large"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="more on your laptop or desktop"
        android:id="@+id/textView10"
        android:textSize="@dimen/font_very_large"
        android:layout_gravity="center_horizontal" />
</LinearLayout>