<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rest_horizontal_listview_mainlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/rest_horizontal_listview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="5dp"
                android:text="Channel Guide"
                android:textColor="@color/channel_text" />

            <ImageView
                android:id="@+id/rest_horizontal_listview_channel_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/rest_left_slide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.05"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/prev_inactive" />

            <LinearLayout
                android:id="@+id/rest_recycler_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:paddingTop="8dp">


                 <android.support.v7.widget.RecyclerView
                     android:layout_gravity="center"
                     android:id="@+id/rest_horizontal_listview"
                     android:stackFromBottom="true"
                     android:transcriptMode="normal"
                     android:layout_width="match_parent"
                     android:layout_height="36dp" />


            </LinearLayout>


            <ImageView
                android:id="@+id/rest_right_slide"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.05"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/next_active" />


        </LinearLayout>

        <TextView
            android:id="@+id/rest_horizontal_listview_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Channels found"
            android:textColor="@color/channel_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_weight="0.05"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/prev_inactive"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.9">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rest_horizontal_channel_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:fadeScrollbars="false"
                    android:paddingRight="5dp" />

                <ProgressBar
                    android:id="@+id/rest_horizontal_channel_list_progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>