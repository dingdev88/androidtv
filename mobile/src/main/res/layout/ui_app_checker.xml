<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/normal_margin"
                android:paddingLeft="@dimen/normal_margin"
    android:background="@color/black"
                android:paddingRight="@dimen/normal_margin"
                android:paddingTop="@dimen/normal_margin"
                tools:context=".ui.activities.AddsCheckerActivity"
                tools:showIn="@layout/ui_apps_check_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:id = "@+id/ll_tabs"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_margin">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/rlt_installed"
            android:layout_height="@dimen/search_bg_btn_height"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="@string/installed"
            android:id="@+id/tv_installed"/>
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:id = "@+id/view_installed"
                android:visibility="gone"
                android:layout_height="1dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/rlt_not_installed"
            android:layout_height="@dimen/search_bg_btn_height"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="@string/not_installed"
                android:gravity="center"
                android:id="@+id/tv_not_installed"/>
            <View
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary"
                android:id = "@+id/view_not_installed"
                android:layout_height="1dp"/>
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_tabs"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ui_main_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            />
    </FrameLayout>
</RelativeLayout>
