<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/timeline_block_layout1"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtChannelName1"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtChannel_time1"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="0.5dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="#333333"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/timeline_block_layout2"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view2"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtChannelName2"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtChannel_time2"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="0.5dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="#333333"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/timeline_block_layout3"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/view3"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtChannelName3"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/txtChannel_time3"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:gravity="center_vertical" />

        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="0.5dp"
            android:layout_height="52dp"
            android:layout_alignParentRight="true"
            android:background="#333333"/>

    </RelativeLayout>


</LinearLayout>
